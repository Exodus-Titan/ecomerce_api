generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// models

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId //the ids will be created with the uuid library
  email        String   @unique
  name         String
  passwordHash String //the password will be hashed with bcrypt
  isAdmin      Boolean //admin(True) (can create, update, delete and replace categories and products) or client(False) (can only read categories and products)
  orders       Order[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Order {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId //the ids will be created with the uuid library
  total     Float
  products  OrederdProduct[]
  status    String //pending, paid, delivered, cancelled
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  User      User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?          @db.ObjectId
}

type OrederdProduct {
  productId String @db.ObjectId
  quantity  Int
}

model Category {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId //the ids will be created with the uuid library
  name        String    @unique
  description String
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId //the ids will be created with the uuid library
  name        String   @unique
  description String
  price       Float
  stock       Int
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
